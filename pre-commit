#!/bin/sh

GNATROOT=/opt/gnat/2007

PATH=$GNATROOT/bin:$HOME/bin:$PATH

res=0

REP=/tmp/_$$

SC_OPTS="-ign out -ign tmplt -ign sed -ign txt -lang Ada -cp -cy -sp -gnat05 -lang XML -l256"

function check() {
   id=$4
   file=`basename $6`
   git show $id > $REP/$file
   ( cd $REP; style_checker $SC_OPTS $file; )
   res=$(($res + $?))
   rm -f $REP/$file
}

mkdir $REP

# Get files to be commited
# <N1> <N2> <Id-OLD> <Id-NEW> <status> <Filename>
git-diff-index -M --cached HEAD > $REP/files

while read list
do
   check $list
done < $REP/files

rm -fr $REP

exit $res
